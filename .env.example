# ====================================
# OceanAware Guardian - Environment Variables
# Bow Seat Ocean Awareness Contest 2026
# ====================================

# ============================================================
# OCEAN DATA APIs (Primary Data Sources)
# ============================================================

# NOAA Tides & Currents API (Tsunami Warnings & Sea Level)
# Get API key: https://api.tidesandcurrents.noaa.gov/api/prod/
VITE_NOAA_API_KEY=your_noaa_api_key_here
VITE_NOAA_TSUNAMI_API=https://api.tidesandcurrents.noaa.gov/api/prod/
VITE_NOAA_COOPS_API=https://api.tidesandcurrents.noaa.gov/api/prod/

# NOAA Coral Reef Watch (Ocean Temperature & Coral Health)
# Public API - No key required: https://coralreefwatch.noaa.gov/
VITE_NOAA_CORAL_WATCH_API=https://coralreefwatch.noaa.gov/product/5km/

# NASA Earthdata (Sea Level Rise & Ocean Color)
# Register: https://urs.earthdata.nasa.gov/users/new
VITE_NASA_EARTHDATA_KEY=your_nasa_earthdata_key_here
VITE_NASA_SEA_LEVEL_API=https://sealevel.nasa.gov/data/
VITE_NASA_PODAAC_API=https://podaac.jpl.nasa.gov/api/

# NASA Ocean Color (Phytoplankton, Chlorophyll)
# Uses same Earthdata credentials
VITE_NASA_OCEAN_COLOR_API=https://oceancolor.gsfc.nasa.gov/api/

# USGS Coastal Change Hazards Portal (Erosion Data)
# Public API: https://coastal.er.usgs.gov/
VITE_USGS_COASTAL_API=https://coastal.er.usgs.gov/api/
VITE_USGS_API_KEY=optional_usgs_key

# National Weather Service (Storm Surge & Marine Forecasts)
# Public API: https://api.weather.gov/
VITE_NWS_API_URL=https://api.weather.gov/
VITE_NWS_USER_AGENT=OceanAwareGuardian/1.0 (your-email@example.com)

# ============================================================
# AI & MACHINE LEARNING
# ============================================================

# HuggingFace API (Ocean Health Image Analysis)
# Get token: https://huggingface.co/settings/tokens
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here
VITE_HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# OpenAI API (Optional - for enhanced ocean education content)
# Get key: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=optional_openai_key

# ============================================================
# AUTHENTICATION & DATABASE
# ============================================================

# Firebase (Anonymous Authentication - COPPA Compliant)
# Setup: https://firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Azure Cosmos DB (Community Hub Backend)
# Setup: https://portal.azure.com/
AZURE_COSMOS_ENDPOINT=https://your-cosmos-db.documents.azure.com:443/
AZURE_COSMOS_KEY=your_cosmos_db_primary_key
AZURE_COSMOS_DATABASE_NAME=oceanaware-guardian
AZURE_COSMOS_CONTAINER_NAME=community-reports

# ============================================================
# SUPPLEMENTARY DATA SOURCES
# ============================================================

# OpenWeatherMap (Weather & Ocean Conditions)
# Get key: https://openweathermap.org/api
VITE_OPENWEATHER_API_KEY=your_openweather_key

# Marine Traffic API (Ship tracking - optional)
# Get key: https://www.marinetraffic.com/en/ais-api-services
VITE_MARINE_TRAFFIC_API_KEY=optional_marine_traffic_key

# Ocean Networks Canada (Real-time Ocean Data - optional)
# Get token: https://data.oceannetworks.ca/
VITE_ONC_API_TOKEN=optional_onc_token

# ============================================================
# PUSH NOTIFICATIONS
# ============================================================

# Web Push VAPID Keys (Ocean Hazard Alerts)
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================

# API Base URL (Backend Server)
VITE_API_BASE_URL=http://localhost:3001/api

# Production API URL (Azure App Service)
# VITE_API_BASE_URL=https://oceanaware-guardian.azurewebsites.net/api

# Environment Mode
NODE_ENV=development

# Feature Flags
VITE_ENABLE_OCEAN_QUESTS=true
VITE_ENABLE_COMMUNITY_HUB=true
VITE_ENABLE_AI_ANALYSIS=true
VITE_ENABLE_DATA_VISUALIZATIONS=true
VITE_ENABLE_CONSERVATION_ENGINE=true

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=optional_ga_id

# ============================================================
# DEVELOPMENT & TESTING
# ============================================================

# Test Mode (Uses mock data instead of real APIs)
VITE_USE_MOCK_DATA=false

# Debug Mode
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Rate Limiting (requests per minute)
VITE_API_RATE_LIMIT=60

# ============================================================
# SECURITY
# ============================================================

# CORS Origins (Comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Session Secret (Generate random string)
SESSION_SECRET=generate_random_secret_here

# ============================================================
# API DOCUMENTATION & RESOURCES
# ============================================================

