{
  "name": "ecoquest-server",
  "version": "1.0.0",
  "description": "Backend API for EcoQuest Wildfire Watch",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js --fix",
    "docker:build": "docker build -t ecoquest-server .",
    "docker:run": "docker run -p 3001:3001 ecoquest-server"
  },
  "dependencies": {
    "@azure/cosmos": "^4.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-rate-limit": "^6.7.0",
    "fast-xml-parser": "^5.2.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.0",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "jest": {
        "useESM": true
      }
    },
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ]
  },
  "keywords": [
    "api",
    "express",
    "wildfire",
    "ai",
    "backend"
  ],
  "author": "Siddharth Shan",
  "license": "MIT"
}
